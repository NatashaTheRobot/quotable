<h1>Quotes</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Author</th>
    <th>Tags</th>
    <th>Likes</th>
    <th></th>
  </tr>

<% @quotes.each do |quote| %>
  <tr>
    <td><%= quote.text %></td>
    <td><%= quote.author %></td>
	<td><%= quote.tags.first.text unless quote.tags.empty? %></td>
	<td><%= quote.likes.count %><td>
    <td><%= link_to 'Show', quote %></td>
    <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
    <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Quote', new_quote_path %>
